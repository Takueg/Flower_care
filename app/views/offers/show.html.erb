
<% @offer.image_urls.each do |image_url| %>
  <%= cl_image_tag image_url.key, height: 300, width: 400, crop: :fill %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Address:</strong>
  <%= @offer.address %>
</p>

<p>
  <strong>Description:</strong>
  <%= @offer.description %>
</p>

<p>
  <strong>Instructions:</strong>
  <%= @offer.instruction %>
</p>

<p>
  <strong>date:</strong>
  <%= @offer.date %>
</p>

<%= link_to 'Back', offers_path %>

<div class="d-flex justify-content-between my-4">
  <div>
    <%= link_to 'delete', offer_path(@offer), method: :delete, class: 'btn btn-flat', data: { confirm: 'Are you sure you want to delete this offer?' } %>
  </div>
</div>
