<div class="container">
  <h2 class="mt-3"><%= @offer.address %></h2>

<div class="image-grid mt-3">

  <div class="large-image">
    <% @offer.image_urls.each_with_index do |image_url, index| %>
      <% if index == 0 %>
        <%= cl_image_tag image_url.key %>
      <% end %>
    <% end %>
  </div>

  <div class="small-images">
    <% @offer.image_urls.each_with_index do |image_url, index| %>
      <% if index != 0 %>
        <%= cl_image_tag image_url.key %>
      <% end %>
    <% end %>
  </div>
</div>

<!-- for booking -->
<%= simple_form_for [ @offer, @booking ] do |f| %>
    <%= f.submit "Create booking", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back', offers_path %>

<div class="d-flex justify-content-between my-4">
  <div>
    <%= link_to 'delete', offer_path(@offer), method: :delete, class: 'btn btn-flat', data: { confirm: 'Are you sure you want to delete this offer?' } %>
  </div>
</div>

