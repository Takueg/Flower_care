<div class="container">
  <h2 class="mt-4"><%= @offer.address %></h2>

<!-- image grid hero -->

<div class="image-grid mt-3">
  <% @offer.image_urls.each_with_index do |image_url, index| %>
    <% if index == 0 %>
      <div class="large-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(image_url.key) %>')">
      </div>
     <% end %>
  <% end %>
  <div class="small-images">
    <% @offer.image_urls.each_with_index do |image_url, index| %>
      <% if index != 0 %>
        <div class="small-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(image_url.key) %>')">
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<!-- middle section -->

<div class="middle-section mb-5">
  <div class="offer-information">
    <div class="offer-details mt-5 pb-3">
      <h4><%= @offer.user.name %> has 15 plants</h4>
      <p class="mt-3"><%= @offer.description %></p>
    </div>
    <div class="offer-instruction mt-3">
      <h4 class="mt-3">Instructions</h4>
      <p class="mt-3"><%= @offer.instruction %></p>
    </div>
  </div>

  <!-- booking card -->

  <div class="booking-card">
    <%#= simple_form_for [ @offer, @booking ] do |f| %>
        <%#= f.submit "Create booking", class: "btn btn-primary" %>
    <%# end %>
    <h4>insert booking card in this div</h4>
  </div>

</div>

