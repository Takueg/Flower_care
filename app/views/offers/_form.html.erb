<%= form_for(@offer) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :instructions %>
  <%= f.text_field :instructions %>
  <%= f.label :image %>
  <%= f.text_field :image_url %>
  <%= f.label :date %>
  <%= f.date_select :date %>
  <%= f.submit %>
<% end %>