<%# Search form from Jonathan %>

<div class="col-sm-12 col-lg-6 center_div ">
<%= form_tag offers_path, method: :get, class: "searchform" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control searchinput",
    placeholder: "Find available offers"
  %>
  <%= submit_tag "Search", class: "btn btn-dark width-button" %>
<% end %>
</div>

<%# WIP-cards from Lena %>
<h2 class="section-heading">Explore all flower caring job offers</h2>
<div class="wrapper">
  <div class="cards">
      <% @offers.each do |offer| %>

        <div class="card-trip">
          <% if offer.image_urls.attached? %>
              <%= cl_image_tag offer.image_urls.first.key, crop: :fill %>
          <% end %>
          <div class="card-trip-infos">
            <div>
              <h4><%= link_to offer.address, offer_path(offer) %></h4>
            </div>
            <h4 class="card-trip-pricing">â‚¬<%= offer.price %></h4>
          </div>
        </div>
      <% end %>
  </div>

  <div id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
