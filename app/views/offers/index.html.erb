<div class="hero-image">
  <div class="hero-text">
    <h1>All available offers in your area</h1>
    <p>View offers and choose which ones to water</p>
  </div>
</div>


<%# WIP-cards from Lena %>

<div class="wrapper">
  <div class="cards">
      <% @offers.each do |offer| %>
        <div class="card-trip">
          <% if offer.image_urls.attached? %>
              <%= cl_image_tag offer.image_urls.first.key, crop: :fill %>
          <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= offer.title %></h2>
              <p><%= offer.description %></p>
            </div>
            <h2 class="card-trip-pricing">â‚¬<%= offer.price %></h2>
          </div>
        </div>
      <% end %>
  </div>

  <div id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
