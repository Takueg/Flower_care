<div class="hero-image">
  <div class="hero-text">
    <h1>All available offers in your area</h1>
    <p>View offers and choose which ones to water</p>
  </div>
</div>

<% @offers.each do |offer| %>
  <div class="card-offer">
    <% if offer.image_urls.attached? %>
      <%= cl_image_tag offer.image_urls.first.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <div class="card-offer-infos">
      <div>
        <h2><%= link_to offer.address, offer_path(offer) %></h2>
        <p><%= offer.title %></p>
      </div>
      <h2 class="card-offer-pricing"><%= offer.date %> | <%= offer.price %>â‚¬</h2>
      <%= image_tag "avatar_01", class: "card-offer-user avatar-bordered" %>
    </div>
    <div id="map"
       style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
<% end %>